// Koda - Social Calendar Database Schema
// Prisma + Supabase Postgres

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================================================
// ENUMS
// ============================================================================

enum AccountVisibility {
  PUBLIC
  FRIENDS_ONLY
  PRIVATE
}

enum DetailLevel {
  DETAILS
  BUSY_ONLY
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  DECLINED
  BLOCKED
}

enum EventVisibility {
  PRIVATE
  FRIENDS
  PUBLIC
}

enum CoverMode {
  NONE
  BUSY_ONLY
}

enum EventSource {
  KODA
  GOOGLE
}

enum AttendeeStatus {
  INVITED
  GOING
  DECLINED
}

enum Anonymity {
  NAMED
  ANONYMOUS
}

enum AttendeeRole {
  HOST
  ATTENDEE
}

// ============================================================================
// MODELS
// ============================================================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  username  String?  @unique
  avatarUrl String?
  city      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  settings              Settings?
  sentFriendRequests    Friendship[] @relation("FriendshipRequester")
  receivedFriendRequests Friendship[] @relation("FriendshipAddressee")
  ownedEvents           Event[]      @relation("EventOwner")
  attendances           Attendee[]

  @@index([email])
  @@index([username])
  @@index([city])
}

model Settings {
  id                String            @id @default(cuid())
  userId            String            @unique
  accountVisibility AccountVisibility @default(FRIENDS_ONLY)
  defaultDetailLevel DetailLevel      @default(BUSY_ONLY)
  allowSuggestions  Boolean           @default(true)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Friendship {
  id              String           @id @default(cuid())
  requesterId     String
  addresseeId     String
  status          FriendshipStatus @default(PENDING)
  canViewCalendar Boolean          @default(false)
  detailLevel     DetailLevel      @default(BUSY_ONLY)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  // Relations
  requester User @relation("FriendshipRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  addressee User @relation("FriendshipAddressee", fields: [addresseeId], references: [id], onDelete: Cascade)

  // Prevent duplicate friendships (A->B and B->A should not both exist)
  @@unique([requesterId, addresseeId])
  @@index([requesterId])
  @@index([addresseeId])
  @@index([status])
}

model Event {
  id           String          @id @default(cuid())
  ownerId      String
  title        String
  description  String?
  locationName String?
  startAt      DateTime
  endAt        DateTime
  timezone     String          @default("UTC")
  visibility   EventVisibility @default(PRIVATE)
  coverMode    CoverMode       @default(NONE)
  source       EventSource     @default(KODA)
  externalId   String?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  // Relations
  owner     User       @relation("EventOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  attendees Attendee[]

  @@index([ownerId])
  @@index([startAt])
  @@index([endAt])
  @@index([visibility])
  @@index([source, externalId])
}

model Attendee {
  id        String         @id @default(cuid())
  eventId   String
  userId    String
  status    AttendeeStatus @default(INVITED)
  anonymity Anonymity      @default(NAMED)
  role      AttendeeRole   @default(ATTENDEE)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  // Relations
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Each user can only attend an event once
  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
  @@index([status])
}
